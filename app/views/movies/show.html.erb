<h1>Show Page</h1>
<nav>
  <%= link_to "All Movies", movies_path %> |
  <%= link_to "Edit", edit_movie_path(@movie) %> |
   <%= link_to "Delete", movie_path(@movie), method: :delete, data: { confirm: 'Are you sure?' } %>
</nav>

<article>
  <header>
    <h1><%= @movie.title %></h1>
  </header>
  <h2>Description</h2>
  <p>
    <%= @movie.description %>
  </p>
  <h3>Rating</h3>
  <p>
    <%= @movie.rating %>
  </p>
  <h3>Released On</h3>
  <p>
    <%= @movie.released_on %>
  </p>
  <h3>Total Gross</h3>
  <p>
    <%= @movie.total_gross %>
  </p>
</article>
<nav>
  <%= link_to "All Movies", movies_path %> |
  <%= link_to "Edit", edit_movie_path(@movie) %> |
  <%= link_to "Delete", movie_path(@movie), method: :delete, data: { confirm: 'Are you sure?' } %>
</nav>